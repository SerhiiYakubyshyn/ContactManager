@model List<ContactManager.Models.PeopleViewModel>
@{
    ViewData["Title"] = "People from CSV file";
}

<td class="text-center">

    @{
        ViewBag.Title = "People from CSV file";
    }

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table class="table">
            <tr>
                <td>Name </td>
                <td>Date of birth </td>
                <td>Married </td>
                <td>Phone </td>
                <td>Salary </td>
            </tr>
            <tr class="form-group">
                @for(int i=0; i < Model.Count(); i++)
                  {

                 <tr>

                    <td class="form-group">
                        @Html.EditorFor(e => e[i].Name)
                    </td>
                    <td class="form-group">
                        @Html.TextBoxFor(e => e[i].DateOfBirth)
                    </td>
                    <td class="form-group">
                        @Html.TextBoxFor(e => e[i].Married)
                    </td>
                    <td class="form-group">
                        @Html.TextBoxFor(e => e[i].Phone)
                    </td>
                    <td class="form-group">
                        @Html.TextBoxFor(e => e[i].Salary)
                    </td>
                </tr>

                 }

            </table>
            <div class="form-group">
                <input asp-action="CSVFile" type="submit" value="Save" class="btn btn-primary" />
            </div>
        }

    <br />
    <div>
        <a asp-action="Upload" class="btn btn-primary">Back to List</a>
    </div>


</td>